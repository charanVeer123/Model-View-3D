<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    tools:context="com.dmitrybrant.modelviewer.MainActivityPlyParser">

    <TextView
        android:id="@+id/txt3dmodel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dmodel"
        android:padding="@dimen/_10sdp"
        android:gravity="center"
        app:fontPath="fonts/HindVadodara-Bold.ttf"
        android:textSize="@dimen/_22sdp"
        android:textColor="@color/yellowtext" />

    <ProgressBar
        android:id="@+id/model_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="top|end" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-10dp"
        android:layout_alignParentBottom="true">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/camerabtn"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/complete"
            android:textColor="@color/white"
            app:fontPath="fonts/HindVadodara-Bold.ttf"
            android:textSize="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"
            android:onClick="showPop"
            android:layout_centerInParent="true"
            />



    </RelativeLayout>






</RelativeLayout>
